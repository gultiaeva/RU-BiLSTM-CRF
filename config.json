{
  "name": "BiLSTM+CRF+ELMo",
  "vocabulary": "data/vocab",
  "train_data": "data/dataset/train_data.conllu.gz",
  "test_data": "data/dataset/test_data.conllu.gz",
  "validation_data": "data/dataset/validation_data.conllu.gz",
  "use_elmo": true,
  "elmo_options": "data/embeddings/elmo/options.json",
  "elmo_weights": "data/embeddings/elmo/model.hdf5",

  "embed_dim": 172,
  "hidden_dim": 256,
  "dropout": 0.1,
  "use_gru": false,

  "learning_rate": 0.005,
  "n_epochs": 20,
  "early_stopping_epochs": 3,
  "batch_size": 32,
  "batch_shuffle": false,
  "max_instances_in_memory": 1000,

  "serialization_dir": "data/models/model_lstm_elmo",
  "checkpoints_dir": "data/models/model_lstm_elmo/checkpoints",

  "use_cuda": true
}

